# Build stage
FROM rust:1-slim-bookworm AS builder

WORKDIR /app

RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    libssl-dev \
    openssl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Set environment variables for OpenSSL
ENV OPENSSL_DIR=/usr
ENV OPENSSL_LIB_DIR=/usr/lib/x86_64-linux-gnu
ENV OPENSSL_INCLUDE_DIR=/usr/include/openssl
ENV PKG_CONFIG_ALLOW_CROSS=1

RUN mkdir api cli

# Copy workspace configurations
COPY core/Cargo.toml ./core/
COPY api/Cargo.toml ./api/

# Copy source code
COPY core/src ./core/src
COPY api/src ./api/src

WORKDIR /app/api

# Build the API binary
RUN cargo build --release --bin prompts-api

# Runtime stage
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -r -s /bin/false appuser

WORKDIR /app

# Copy the binary from builder stage
COPY --from=builder /app/api/target/release/prompts-api /usr/local/bin/prompts-api

RUN chown root:root /usr/local/bin/prompts-api && \
    chmod 755 /usr/local/bin/prompts-api

USER appuser

ENTRYPOINT ["/usr/local/bin/prompts-api"]