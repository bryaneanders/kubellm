# Build stage
FROM rust:1-slim-bookworm AS builder

WORKDIR /app
RUN mkdir core cli
RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    libssl-dev \
    libssl3 \
    openssl \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Use vendored OpenSSL to avoid cross-compilation issues
ENV OPENSSL_STATIC=1
ENV OPENSSL_VENDORED=1

# Copy workspace configuration
COPY cli/Cargo.toml ./
COPY core/Cargo.toml ./core/
COPY cli/Cargo.toml ./cli/

# Copy source code
COPY core/src ./core/src
COPY cli/src ./cli/src

WORKDIR /app/cli

# Build the CLI binary
RUN cargo build --release --bin prompts-cli

# Runtime stage
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -r -s /bin/false appuser

WORKDIR /app

# Copy the binary from builder stage
COPY --from=builder /app/cli/target/release/prompts-cli /usr/local/bin/prompts-cli

RUN chown root:root /usr/local/bin/prompts-cli && \
    chmod 755 /usr/local/bin/prompts-cli

RUN mkdir /data && chown appuser:appuser /data

USER appuser

ENTRYPOINT ["/usr/local/bin/prompts-cli"]